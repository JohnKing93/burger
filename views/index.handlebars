<div class="container" id="white-block">
        
        <div class="row">
            <h1 class="display-2">Burger Restaurant</h1>
        </div>
       
        <div class="row">
            <div class="col-6 col-md-6">
                <h2>Burger Menu</h2>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#unless devoured}}
                            <li class="list-group-item">
                                {{burger_name}}
                                <button class="btn btn-outline-warning" id="devour" data-id="{{id}}">Eat</button>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="col-6 col-md-6">
                <h2>Trash Can</h2>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#if devoured}}
                            <li class="list-group-item">
                                {{burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="container">
            <h2>Create Your Own Burger</h2>
            <form id="create-burger">
                
                <div class="form-group">
                    <label for="burger-name">Burger Name:</label>
                    <input type="text" class="form-control" id="burger-name" name="burger-name">
                
                </div>
                
                <button type="submit" class="btn btn-warning">Add Burger</button>
            </form>
        </div>
</div>